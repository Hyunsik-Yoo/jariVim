<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="376.58dp"
        android:layout_height="6.84dp"
        android:layout_gravity="center"
        android:background="@drawable/seekbar_top" />

    <SeekBar
        android:layout_height="14.82dp"
        android:layout_width="372.78dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/seekBar"
        android:thumb="@drawable/seekbar_thumb"
        android:max="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_width="54.34dp"
            android:layout_height="54.34dp"
            android:id="@+id/btn_confirm"
            android:background="@drawable/btn_vote"
            android:layout_marginRight="10dp"
             />

        <Button
            android:layout_width="54.34dp"
            android:layout_height="54.34dp"
            android:id="@+id/btn_cancle"
            android:background="@drawable/btn_cancel"
            android:layout_marginLeft="10dp"
             />
    </LinearLayout>
</LinearLayout>