<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cnu.lineup.com.cnulineup.ListActivity">


    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="56.67dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_back"
            android:layout_weight="1"
            android:background="@drawable/btn_back_xxhdpi" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:background="@drawable/top_category_xxhdpi" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_infomation"
        android:layout_width="match_parent"
        android:layout_height="33.33dp"
        android:layout_below="@id/layout_header"
        android:gravity="center"
        android:background="@drawable/subtop_xxhdpi">

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="유현식 님 남은 투표 횟수"
            android:textAlignment="center"
            android:textSize="15dp"
            android:id="@+id/text_user_info" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="#00000000"
        android:divider="@android:color/transparent"
        android:dividerHeight="20.0sp"
        android:padding="20dip"
        android:clipToPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_infomation" />

</RelativeLayout>

