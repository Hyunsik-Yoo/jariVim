<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TabHost
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="348dp"
                    android:layout_height="71.44dp"
                    android:background="@drawable/main_top" />

                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="61.18dp"
                    android:layout_height="71.44dp"
                    android:background="@drawable/icon_search" />

            </LinearLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="411dp"
                android:layout_height="76dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@android:id/tabs"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/layout_top">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="355.3dp"
                            android:layout_height="38dp"
                            android:background="@drawable/time_background" />

                        <Button
                            android:id="@+id/btn_refresh"
                            android:layout_width="55.1dp"
                            android:layout_height="38dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/btn_refresh" />

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadeScrollbars="true"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbars="none"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ToggleButton
                                android:id="@+id/btn_category_bob"
                                android:layout_width="68.4dp"
                                android:layout_height="68.4dp"
                                android:background="@drawable/btn_cateogory_bob"
                                android:checked="true"
                                style="?android:attr/borderlessButtonStyle"
                                android:textOff=""
                                android:textOn="" />

                            <ToggleButton
                                android:id="@+id/btn_category_noodle"
                                android:layout_width="68.4dp"
                                android:layout_height="68.4dp"
                                android:background="@drawable/btn_category_noddle"
                                style="?android:attr/borderlessButtonStyle"
                                android:textOff=""
                                android:textOn="" />

                            <ToggleButton
                                android:id="@+id/btn_category_fastfood"
                                android:layout_width="68.4dp"
                                android:layout_height="68.4dp"
                                android:background="@drawable/btn_category_fastfood"
                                style="?android:attr/borderlessButtonStyle"
                                android:textOff=""
                                android:textOn="" />

                            <ToggleButton
                                android:id="@+id/btn_category_fork"
                                android:layout_width="68.4dp"
                                android:layout_height="68.4dp"
                                android:background="@drawable/btn_category_fork"
                                style="?android:attr/borderlessButtonStyle"
                                android:textOff=""
                                android:textOn="" />

                            <ToggleButton
                                android:id="@+id/btn_category_cafe"
                                android:layout_width="68.4dp"
                                android:layout_height="68.4dp"
                                android:background="@drawable/btn_category_cafe"
                                style="?android:attr/borderlessButtonStyle"
                                android:textOff=""
                                android:textOn="" />

                            <ToggleButton
                                android:id="@+id/btn_category_beer"
                                android:layout_width="68.4dp"
                                android:layout_height="68.4dp"
                                android:background="@drawable/btn_category_drink"
                                style="?android:attr/borderlessButtonStyle"
                                android:textOff=""
                                android:textOn="" />

                        </LinearLayout>
                    </HorizontalScrollView>


                    <LinearLayout
                        android:layout_width="410.4dp"
                        android:layout_height="52.06dp"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btn_sortby_popular"
                            android:layout_width="205.2dp"
                            android:layout_height="52.06dp"
                            android:background="@drawable/btn_sortby_popular"
                            android:textOff=""
                            android:textOn="" />

                        <ToggleButton
                            android:id="@+id/btn_sortby_text"
                            android:layout_width="205.2dp"
                            android:layout_height="52.06dp"
                            android:background="@drawable/btn_sortby_text"
                            android:textOff=""
                            android:textOn="" />

                    </LinearLayout>


                    <ExpandableListView
                        android:id="@+id/list_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:childDivider="#00000000"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="20.0sp"

                        />


